@model HackerNews.Mvc.ViewModels.Users.UserSavedViewModel 

<div class="container-fluid">
    <div class="row p-4">
        @* Main Content *@
        <div class="col-sm-12 col-md-7 col-lg-9 main-content card-deck">
            @* Articles *@
            <h4>Articles</h4>
            @foreach (var article in Model.SavedArticlesPage.Items)
            {
                @await Component.InvokeAsync("ArticleCard", new { articleModel = article });
            }
            @*TODO: add mutliple paging params*@
            @* Comments *@
            <h4>Comments</h4>
            @foreach (var comment in Model.SavedCommentsPage.Items)
            {
                @await Component.InvokeAsync("CommentCard", new { commentModel = comment });
            }
            <div class="row w-100 h-100"></div>
        </div>

        @* Sidebar *@
        <div class="d-none d-md-block col-md-5 col-lg-3 sidebar">
            @await Component.InvokeAsync("HomeSidebarCard")
        </div>

        @* Footer *@
    </div>
    <div class="card-footer">
    </div>
</div>