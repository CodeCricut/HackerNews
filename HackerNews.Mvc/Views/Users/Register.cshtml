@model HackerNews.Mvc.ViewModels.Users.UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_CenteredLayout";
}

<form asp-controller="Users" asp-action="register" class="card card-lg login-card" enctype="multipart/form-data">
    <h2>Register</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <input type="text" asp-for="RegisterModel.FirstName" placeholder="First Name">
        <span asp-validation-for="RegisterModel.FirstName" class="text-danger"></span>
    </div>

    <div>
        <input type="text" asp-for="RegisterModel.LastName" placeholder="Last Name">
        <span asp-validation-for="RegisterModel.LastName" class="text-danger"></span>
    </div>

    <div>
        <input type="text" asp-for="RegisterModel.Username" placeholder="Username">
        <span asp-validation-for="RegisterModel.Username" class="text-danger"></span>
    </div>

    <div>
        <input type="password" asp-for="RegisterModel.Password" placeholder="Password">
        <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>
    </div>

    <input type="file" id="userProfileImage" name="userProfileImage" placeholder="Profile Picture" />

    <input type="submit" value="Register" class="btn btn-primary" />
</form>
