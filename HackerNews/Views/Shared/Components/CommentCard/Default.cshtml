@model HackerNews.ViewModels.Other.CommentCardViewModel

<div class="row w-100">
    <div class="col card article-card mb-3">
        <div class="row card-body">
            <div class="d-none d-md-block col-md-1 text-center">
                @Model.Comment.Karma
            </div>
            <div class="col-sm-12 col-md-11">
                <div>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.User.Id">@Model.User.Username</a> at
                    @Model.Comment.PostDate

                    |  <a asp-controller="Boards" asp-action="Details" asp-route-id="@Model.Board.Id">@Model.Board.Title</a>

                    |
                    @if (Model.ParentArticle != null)
                    {
                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.ParentArticle.Id">Parent</a>
                    }
                    @if (Model.ParentComment != null)
                    {
                        <a asp-controller="Comments" asp-action="Details" asp-route-id="@Model.ParentComment.Id">Parent</a>

                    }
                    | @if (Model.Comment.CommentIds.Count() <= 0)
                    {
                        <a asp-controller="Comments" asp-action="Details" asp-route-id="@Model.Comment.Id">Start discussion</a>
                    }
                    @if (Model.Comment.CommentIds.Count() >= 1)
                    {
                        <a asp-controller="Comments" asp-action="Details" asp-route-id="@Model.Comment.Id">@Model.Comment.CommentIds.Count() comments</a>
                    }
                    @if (Model.Comment.Deleted)
                    {
                        <text>| <span class="text-danger">Deleted</span></text>
                    }

                </div>
                <p>
                    @Model.Comment.Text
                </p>
            </div>
        </div>
    </div>
</div>