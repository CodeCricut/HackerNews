@model HackerNews.ViewModels.Other.BoardCardViewModel

<div class="row w-100">
    <div class="col card article-card mb-3">
        <div class="row card-body">
            <div class="col-sm-12 col-md-11">
                <a asp-controller="Boards" asp-action="Details" asp-route-id="@Model.Board.Id">
                    @Model.Board.Title
                </a>
                <p>@Model.Board.Description</p>
            </div>
        </div>
    </div>
</div>