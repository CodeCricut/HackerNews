@model HackerNews.ViewModels.Users.UserSavedView

<div class="container-fluid">
    <div class="row p-4">
        @* Main Content *@
        <div class="col-sm-12 col-md-7 col-lg-9 main-content card-deck">
        @* Articles *@
        <h4>Articles</h4>
        @foreach (var article in Model.SavedArticles)
        {
            @await Component.InvokeAsync("ArticleCard", new { articleModel = article });
        }
        @* Comments *@
        <h4>Comments</h4>
        @foreach (var comment in Model.SavedComments)
        {
            @await Component.InvokeAsync("CommentCard", new { commentModel = comment });
        }
        <div class="row w-100 h-100"></div>
    </div>

    @* Sidebar *@
    <div class="d-none d-md-block col-md-5 col-lg-3 sidebar">
        <partial name="_HomeSidebarCard" />
    </div>

    @* Footer *@
    </div>
    <div class="card-footer">
    </div>
</div>