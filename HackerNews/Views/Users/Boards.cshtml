@model HackerNews.ViewModels.Users.UserBoardsView
@{
    ViewData["Title"] = "Boards";
}

<div class="container-fluid">
    <div class="row p-4">
        @* Main Content *@
@* TODO: either need to split into two actions/views for paging, or have multiple page params*@
        <div class="col-sm-12 col-md-7 col-lg-9 main-content card-deck">
            <h4>Subscribed Boards</h4>
            @foreach (var board in Model.BoardsSubscribedPage.Items)
            {
                @await Component.InvokeAsync("BoardCard", new { boardModel = board });
            }
            @* Comments *@
            <h4>Moderating Boards</h4>
            @foreach (var board in Model.BoardsModeratingPage.Items)
            {
                @await Component.InvokeAsync("BoardCard", new { boardModel = board });
            }
            <div class="row w-100 h-100"></div>
        </div>

        @* Sidebar *@
        <div class="d-none d-md-block col-md-5 col-lg-3 sidebar">
            @await Component.InvokeAsync("HomeSidebarCard") 
        </div>

        @* Footer *@
    </div>
    <div class="card-footer">
    </div>
</div>
