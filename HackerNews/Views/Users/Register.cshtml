@model HackerNews.ViewModels.Users.UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
            <form asp-action="Register" class="form">
                <h1 class="h3 mb-3 font-weight-normal form">Register for HackerNews</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostModel.FirstName" class="control-label"></label>
                    <input asp-for="PostModel.FirstName" class="form-control inputEmail" />
                    <span asp-validation-for="PostModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostModel.LastName" class="control-label"></label>
                    <input asp-for="PostModel.LastName" class="form-control" />
                    <span asp-validation-for="PostModel.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostModel.Username" class="control-label"></label>
                    <input asp-for="PostModel.Username" class="form-control" />
                    <span asp-validation-for="PostModel.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostModel.Password" class="control-label"></label>
                    <input asp-for="PostModel.Password" class="form-control" />
                    <span asp-validation-for="PostModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

