<UserControl x:Class="Hackernews.WPF.MVVM.View.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hackernews.WPF.MVVM.View"
             xmlns:users="clr-namespace:Hackernews.WPF.MVVM.View.Users"
             xmlns:controls="clr-namespace:Hackernews.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="rootElement"
            d:DataContext="{d:DesignInstance local:ProfileControl}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Profile"
                       Foreground="White"
                       FontSize="22" Margin="0 0 0 20"/>
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Visible"
                          Height="450"
                          Style="{StaticResource FavsScrollViewer}"
                          FlowDirection="RightToLeft"
                          >
                <Border VerticalAlignment="Top"
                        FlowDirection="LeftToRight" BorderThickness="0">
                    <Grid Margin="0 0 10 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--User details-->
                        <users:PrivateUserDetailsControl PrivateUserViewModel="{Binding ProfileViewModel.PrivateUserViewModel, Mode=OneWay}"
                                                         Grid.ColumnSpan="2" />

                        <!--Moderating Boards-->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Moderating Boards"
                                       Foreground="White"
                                       FontSize="14"
                                       Margin="0 29 0 0" />
                            <controls:BoardListControl Grid.RowSpan="2"
                                                       Grid.Row="1"
                                                       Margin="0 10 5 0"
                                                       BoardsListViewModel="{Binding ProfileViewModel.PrivateUserViewModel.BoardsModeratingListViewModel}" />
                            <controls:BoardDetailsControl Margin="5 10 0 0"
                                                          Grid.Row="1"
                                                          Grid.Column="1"
                                                          BoardsListViewModel="{Binding ProfileViewModel.PrivateUserViewModel.BoardsModeratingListViewModel}" />
                        </Grid>

                        <!--Moderating Boards-->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Moderating Boards"
                                       Foreground="White"
                                       FontSize="14"
                                       Margin="0 29 0 0" />
                            <controls:BoardListControl Grid.RowSpan="2"
                                                       Grid.Row="1"
                                                       Margin="0 10 5 0"
                                                       BoardsListViewModel="{Binding ProfileViewModel.PrivateUserViewModel.BoardsModeratingListViewModel}" />
                            <controls:BoardDetailsControl Margin="5 10 0 0"
                                                          Grid.Row="1"
                                                          Grid.Column="1"
                                                          BoardsListViewModel="{Binding ProfileViewModel.PrivateUserViewModel.BoardsModeratingListViewModel}" />
                        </Grid>
                    </Grid>
                </Border>
               
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
