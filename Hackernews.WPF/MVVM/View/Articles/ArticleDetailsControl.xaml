<UserControl x:Class="Hackernews.WPF.Controls.ArticleDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hackernews.WPF.Controls" xmlns:viewmodels="clr-namespace:Hackernews.WPF.ViewModels"
             xmlns:articleModels="clr-namespace:HackerNews.Domain.Common.Models.Articles;assembly=HackerNews.Domain"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Name="rootElement"  
            d:DataContext="{d:DesignInstance local:ArticleDetailsControl}"
            BorderThickness="1" 
            BorderBrush="LightGray" 
            CornerRadius="5" 
            Margin="5" 
            Padding="0 20" 
            Background="{StaticResource cardBackground}"
            Visibility="{Binding ArticleListViewModel.IsArticleSelected,  
                        Converter={StaticResource boolToVis}, Mode=OneWay}">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Karma column-->
            <TextBlock VerticalAlignment="Center" 
                       Text="{Binding ArticleListViewModel.ArticleViewModel.Karma}"
                       Margin="20 0"/>

            <!--Main Column-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Posted at " Foreground="Gray"/>
                    <TextBlock Text="{Binding ArticleListViewModel.ArticleViewModel.PostDate}"
                           Foreground="Gray"/>
                    <TextBlock Text="(user owned)"
                           Foreground="Gray"
                               Visibility="{Binding ArticleListViewModel.ArticleViewModel.UserCreatedArticle, Converter={StaticResource boolToVis}}"/>
                </StackPanel>
                    <TextBlock Grid.Row="1" Text="{Binding ArticleListViewModel.ArticleViewModel.Title}" 
                           TextWrapping="Wrap" FontSize="14" />

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <TextBlock Grid.Row="1" Text="{Binding ArticleListViewModel.ArticleViewModel.Text}" 
                           TextWrapping="Wrap"  Margin="0 0 10 0" Foreground="Gray"/>
                </ScrollViewer>
            </Grid>

        </Grid>
    </Border>
</UserControl>
