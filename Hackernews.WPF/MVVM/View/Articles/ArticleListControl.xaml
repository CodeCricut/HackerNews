<UserControl x:Class="Hackernews.WPF.Controls.ArticleListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hackernews.WPF.Controls"
             xmlns:viewmodels="clr-namespace:Hackernews.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=local:ArticleListControl}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White"
             Background="Transparent">
    <Border x:Name="rootElement"
            Padding="0 10"
            CornerRadius="10 10 0 0"
            Background="{StaticResource cardBackground}">
        
        <!--Article List-->
        <ListView Background="Transparent"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding ArticleListViewModel.Articles, Mode=OneWay}"
                  SelectedItem="{Binding ArticleListViewModel.ArticleViewModel, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:ArticleViewModel}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" Foreground="White"/>
                        <TextBlock Text=" (user owned)"
                                   Visibility="{Binding UserCreatedArticle, 
                                            Converter={StaticResource boolToVis}}"
                                   Foreground="Gray" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Border>
</UserControl>
