<UserControl x:Class="Hackernews.WPF.Controls.BoardListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hackernews.WPF.Controls" 
             d:DataContext="{d:DesignInstance Type=local:BoardListControl}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="rootElement"
            Style="{StaticResource listViewBorderStyle}">

        <ListView Background="Transparent"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ItemContainerStyle="{StaticResource EntityListViewItemContainerStyle}"
                  DisplayMemberPath="Title"
                  ItemsSource="{Binding BoardsListViewModel.Boards, Mode=OneWay}"
                  SelectedItem="{Binding BoardsListViewModel.BoardViewModel.Board, Mode=TwoWay}" 
                  Foreground="White"
                  />
    </Border>
</UserControl>
