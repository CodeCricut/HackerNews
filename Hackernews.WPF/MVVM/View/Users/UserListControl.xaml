<UserControl x:Class="Hackernews.WPF.Controls.UserListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hackernews.WPF.Controls"
             xmlns:viewmodels="clr-namespace:Hackernews.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border x:Name="rootElement"
            Style="{StaticResource listViewBorderStyle}">
        <ListView Background="Transparent"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemContainerStyle="{StaticResource EntityListViewItemContainerStyle}"
                  DisplayMemberPath="Username"
                  ItemsSource="{Binding UserListViewModel.Users, Mode=OneWay}"
                  SelectedItem="{Binding UserListViewModel.UserViewModel.User, Mode=TwoWay}" 
                  Foreground="White"/>
    </Border>
</UserControl>
