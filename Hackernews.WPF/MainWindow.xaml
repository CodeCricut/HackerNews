<Window x:Class="Hackernews.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackernews.WPF"
        mc:Ignorable="d"
        xmlns:articles="clr-namespace:HackerNews.Domain.Common.Models.Articles;assembly=HackerNews.Domain" 
        xmlns:controls="clr-namespace:Hackernews.WPF.Controls" 
        xmlns:viewmodels="clr-namespace:Hackernews.WPF.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800"
        Name="MainWindowView">
    <Window.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Resources/MainWindowDataTemplates.xaml"/>
                </ResourceDictionary.MergedDictionaries>
                <BooleanToVisibilityConverter x:Key="boolToVis"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
      
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Header-->
        <Grid Background="Orange" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock FontSize="30" Foreground="White" FontWeight="Bold" Margin="10 10 10 0">Hacker News</TextBlock>
            <TextBlock Grid.Row="1" Foreground="White"  Margin="10 0 10 10">Administrative Panel V1</TextBlock>

            <Grid Grid.Column="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <controls:ButtonEx 
                    Command="{Binding SelectUsersCommand}"
                    Grid.Column="0"
                    Style="{StaticResource navigationButton}"
                    >Users</controls:ButtonEx>
                <controls:ButtonEx 
                    Command="{Binding SelectBoardsCommand}"
                    Grid.Column="1"
                    Style="{StaticResource navigationButton}"
                    >Boards</controls:ButtonEx>
                <controls:ButtonEx 
                    Command="{Binding SelectArticlesCommand}"
                    Grid.Column="2"
                    Style="{StaticResource navigationButton}"
                    >Articles</controls:ButtonEx>
                <controls:ButtonEx 
                    Command="{Binding SelectCommentsCommand}"
                    Grid.Column="3"
                    Style="{StaticResource navigationButton}"
                    >Comments</controls:ButtonEx>
            </Grid>
        </Grid>

        <!--List views-->
        <ContentControl Grid.Row="1"
                        Grid.RowSpan="2"
                        Content="{Binding SelectedListViewModel}"
                        />
        
        <!--Detailes views-->
        <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        Content="{Binding SelectedDetailsViewModel}"
                        />

        <!--Footer-->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="Orange" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Logged in as " Foreground="White"/>
                <TextBlock Text="{Binding PrivateUserViewModel.UserName, Mode=OneWay}" Foreground="White"/>
            </StackPanel> 
        </Border>
    </Grid>
</Window>
