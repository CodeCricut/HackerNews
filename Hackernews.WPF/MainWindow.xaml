<Window x:Class="Hackernews.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackernews.WPF"
        mc:Ignorable="d"
        xmlns:articles="clr-namespace:HackerNews.Domain.Common.Models.Articles;assembly=HackerNews.Domain" xmlns:controls="clr-namespace:Hackernews.WPF.Controls" xmlns:viewmodels="clr-namespace:Hackernews.WPF.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800"
        Name="MainWindowView">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Header-->
        <Grid Background="Orange" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock FontSize="30" Foreground="White" FontWeight="Bold" Margin="10 10 10 0">Hacker News</TextBlock>
            <TextBlock Grid.Row="1" Foreground="White"  Margin="10 0 10 10">Administrative Panel V1</TextBlock>

            <Grid Grid.Column="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <controls:ButtonEx 
                    Command="{Binding NavigationViewModel.SelectBoardsCommand}"
                    Background="Transparent"
                    HoverBackground="Transparent"
                    HoverFontSize="22"
                    Foreground="White"
                    FontSize="18"
                    BorderBrush="Transparent"
                    >Boards</controls:ButtonEx>
                <controls:ButtonEx 
                    Command="{Binding NavigationViewModel.SelectArticlesCommand}"
                    Grid.Column="1"
                    Background="Transparent"
                    HoverBackground="Transparent"
                    HoverFontSize="22"
                    Foreground="White"
                    FontSize="18"
                    BorderBrush="Transparent"
                    >Articles</controls:ButtonEx>
                <controls:ButtonEx 
                    Command="{Binding NavigationViewModel.SelectCommentsCommand}"
                    Grid.Column="2"
                    Background="Transparent"
                    HoverBackground="Transparent"
                    HoverFontSize="22"
                    Foreground="White"
                    FontSize="18"
                    BorderBrush="Transparent"
                    >Comments</controls:ButtonEx>
            </Grid>
        </Grid>

        <!-- Boards List-->
        <controls:BoardListControl Grid.Row="1" Grid.RowSpan="2"
              Visibility="{Binding NavigationViewModel.AreBoardsSelected, Converter={StaticResource boolToVis}, Mode=OneWay}"
                             BoardsListViewModel="{Binding BoardsListViewModel}"/>

        <!--Board Details-->
        <controls:BoardDetailsControl
            Grid.Row="1" Grid.Column="1"
            BoardsListViewModel="{Binding BoardsListViewModel, Mode=OneWay}"
            Visibility="{Binding NavigationViewModel.AreBoardsSelected, Converter={StaticResource boolToVis}, Mode=OneWay}"/>


        <!-- Articles List-->
        <controls:ArticleListControl Grid.Row="1"  Grid.RowSpan="2"
              Visibility="{Binding NavigationViewModel.AreArticlesSelected, Converter={StaticResource boolToVis}, Mode=OneWay}"
                             ArticlesViewModel="{Binding ArticlesViewModel}"/>
     
        <!--Article Details-->
        <controls:ArticleDetailsControl 
            Grid.Row="1" Grid.Column="1" 
            ArticlesViewModel="{Binding ArticlesViewModel, Mode=OneWay}"
            Visibility="{Binding NavigationViewModel.AreArticlesSelected, Converter={StaticResource boolToVis}, Mode=OneWay}"
            />

        <!-- Comments List-->
        <controls:CommentListControl Grid.Row="1"  Grid.RowSpan="2"
              Visibility="{Binding NavigationViewModel.AreCommentsSelected, Converter={StaticResource boolToVis}, Mode=OneWay}"
                             CommentListViewModel="{Binding CommentListViewModel}"/>
        
        <!--Comment Details-->
        <controls:CommentDetailsControl 
            Grid.Row="1" Grid.Column="1" 
            CommentListViewModel="{Binding CommentListViewModel, Mode=OneWay}"
            Visibility="{Binding NavigationViewModel.AreCommentsSelected, Converter={StaticResource boolToVis}, Mode=OneWay}"
            />
    </Grid>
</Window>
